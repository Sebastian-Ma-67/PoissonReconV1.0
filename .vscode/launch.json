{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${workspaceFolder}/Bin/Linux/PoissonRecon",
            "args": ["--in",
                 "${workspaceFolder}/Bin/Linux/bunny.bnpts", 
                 "--out", 
                 "${workspaceFolder}/Bin/Linux/bunny.ply", 
                 "--depth",
                 "10",
                 "--binary",
                 "--solverDivide", 
                 "8",
                 "--verbose"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}